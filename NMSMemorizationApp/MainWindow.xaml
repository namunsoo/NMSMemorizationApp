<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NMSMemorizationApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NMSMemorizationApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView PaneDisplayMode="LeftMinimal" IsBackButtonVisible="Collapsed" IsSettingsVisible="False">
        <NavigationView.PaneCustomContent>
            <StackPanel Width="320" Height="700">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Grid.ColumnSpan="2" Margin="10,0,10,0" Width="300" Header="엑셀파일이 있는 폴더 경로를 입력하세요." PlaceholderText="ex) C:\Users" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="순서 랜덤" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="lightToggle"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="암기할 카드 종류" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <DropDownButton Grid.Row="2" Grid.Column="1" Content="암기중" x:Name="FieldStrength">
                        <DropDownButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="암기중"/>
                                <MenuFlyoutItem Text="암기완료"/>
                                <MenuFlyoutItem Text="전체"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>
            </StackPanel>
        </NavigationView.PaneCustomContent>

        <!--<Frame x:Name="ContentFrame"/>-->
        <Frame Background="#F3EEEA">
            <Grid>
                <Grid Height="50" Width="400" Margin="0,0,0,600" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0" x:Name="progressBar1" Width="280" Value="0" Maximum="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="00/00"/>
                </Grid>
                <ScrollViewer Height="250" Width="400" Margin="0,0,0,300" BorderBrush="#f0f0f0" BorderThickness="1" CornerRadius="4,4,4,4" Background="White"
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="question" Height="auto" Width="390" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </ScrollViewer>
                <Button Height="150" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,460,0">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Previous"/>
                    </StackPanel>
                    <Button.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Light">
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#B0A695"/>
                                </ResourceDictionary>
                            </ResourceDictionary.ThemeDictionaries>
                        </ResourceDictionary>
                    </Button.Resources>
                </Button>
                <Button Height="150" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="460,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Next"/>
                    </StackPanel>
                    <Button.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Light">
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#B0A695"/>
                                </ResourceDictionary>
                            </ResourceDictionary.ThemeDictionaries>
                        </ResourceDictionary>
                    </Button.Resources>
                </Button>
                <Expander Height="250" Width="400" Margin="0,200,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#e6e6e6">
                    <Expander.Header>
                        <TextBlock Text="정답"/>
                    </Expander.Header>
                    <Expander.Content>
                        <ScrollViewer>
                            <TextBlock x:Name="txtBlkAnswer" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Expander.Content>
                </Expander>
                <Grid Height="50" Width="400" Margin="0,500,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" HorizontalAlignment="Center" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="암기 완료" />
                            <SymbolIcon Symbol="Accept" Foreground="#128b44" Margin="10,0,0,0"/>
                        </StackPanel>
                        <Button.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.ThemeDictionaries>
                                    <ResourceDictionary x:Key="Light">
                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#40128b44"/>
                                    </ResourceDictionary>
                                </ResourceDictionary.ThemeDictionaries>
                            </ResourceDictionary>
                        </Button.Resources>
                    </Button>
                    <Button Grid.Column="1" HorizontalAlignment="Center" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="암기 실패" />
                            <SymbolIcon Symbol="Cancel" Foreground="#c50500" Margin="10,0,0,0"/>
                        </StackPanel>
                        <Button.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.ThemeDictionaries>
                                    <ResourceDictionary x:Key="Light">
                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#40c50500"/>
                                    </ResourceDictionary>
                                </ResourceDictionary.ThemeDictionaries>
                            </ResourceDictionary>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
        </Frame>
    </NavigationView>

</Window>
